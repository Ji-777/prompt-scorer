# Enable pnpm workspaces
enable-pre-post-scripts=true

# Hoist dependencies to root when possible
hoist-pattern[]=*

# Don't hoist these packages to avoid conflicts
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Use strict peer dependencies
strict-peer-dependencies=false

# Auto install peer dependencies
auto-install-peers=true

# Shamefully hoist to avoid some dependency issues
shamefully-hoist=false

# Use node-linker for better compatibility
node-linker=isolated 